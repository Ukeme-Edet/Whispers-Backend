[Unit]
Description=Gunicorn instance to serve whispers
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/whispers-backend
Environment="PATH=/home/ubuntu/whispers-backend/venv/bin"
ExecStart=/home/ubuntu/whispers-backend/venv/bin/gunicorn --workers 5 --bind unix:whispers-service.sock -m 007 run:app

[Install]
WantedBy=multi-user.target
